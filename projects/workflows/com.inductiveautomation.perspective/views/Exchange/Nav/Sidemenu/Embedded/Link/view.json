{
  "custom": {
    "key": ""
  },
  "params": {
    "icon": "material/person",
    "isLink": true,
    "label": "Link 1",
    "showArrow": false,
    "target": ""
  },
  "propConfig": {
    "custom.key": {
      "binding": {
        "config": {
          "expression": "{page.props.path}"
        },
        "transforms": [
          {
            "code": "\tif not self.view.params.isLink:\n\t\treturn \"not-a-link \"\n\telif value \u003d\u003d self.view.params.target:\n\t\treturn \"selected \"\n\telif value.split(\"/\")[1] \u003d\u003d self.view.params.label.lower().replace(\" \",\"-\"):\n\t\treturn \"selected-parent \"\n\telse:\n\t\treturn \"\"",
            "type": "script"
          }
        ],
        "type": "expr"
      },
      "persistent": true
    },
    "params.icon": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.isLink": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.label": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.showArrow": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.target": {
      "paramDirection": "input",
      "persistent": true
    }
  },
  "props": {
    "defaultSize": {
      "height": 40,
      "width": 250
    }
  },
  "root": {
    "children": [
      {
        "meta": {
          "name": "Icon"
        },
        "position": {
          "basis": "40px",
          "shrink": 0
        },
        "propConfig": {
          "props.path": {
            "binding": {
              "config": {
                "path": "view.params.icon"
              },
              "type": "property"
            }
          }
        },
        "props": {
          "style": {
            "padding": "8px"
          }
        },
        "type": "ia.display.icon"
      },
      {
        "meta": {
          "name": "Label"
        },
        "position": {
          "basis": "50px",
          "grow": 1,
          "shrink": 0
        },
        "propConfig": {
          "props.text": {
            "binding": {
              "config": {
                "expression": "{view.params.label}"
              },
              "type": "expr"
            }
          }
        },
        "props": {
          "style": {
            "overflow": "hidden"
          },
          "textStyle": {
            "whiteSpace": "nowrap"
          }
        },
        "type": "ia.display.label"
      },
      {
        "meta": {
          "name": "Arrow"
        },
        "position": {
          "basis": "40px",
          "shrink": 0
        },
        "propConfig": {
          "position.display": {
            "binding": {
              "config": {
                "expression": "{view.params.showArrow}"
              },
              "type": "expr"
            }
          }
        },
        "props": {
          "path": "material/arrow_right",
          "style": {
            "padding": "8px"
          }
        },
        "type": "ia.display.icon"
      }
    ],
    "events": {
      "dom": {
        "onClick": {
          "config": {
            "script": "\ttarget \u003d self.view.params.target\n\tsystem.perspective.navigate(page \u003d target)"
          },
          "scope": "G",
          "type": "script"
        }
      }
    },
    "meta": {
      "name": "root"
    },
    "propConfig": {
      "props.style.classes": {
        "binding": {
          "config": {
            "expression": "concat(\"nav-link \",\r\n{view.custom.key}\r\n)"
          },
          "type": "expr"
        }
      }
    },
    "props": {
      "style": {
        "overflow": "hidden"
      }
    },
    "type": "ia.container.flex"
  }
}