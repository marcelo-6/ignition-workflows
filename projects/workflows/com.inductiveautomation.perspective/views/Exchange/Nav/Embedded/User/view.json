{
  "custom": {
    "isLoggedIn": true
  },
  "params": {},
  "propConfig": {
    "custom.isLoggedIn": {
      "binding": {
        "config": {
          "expression": "{session.props.auth.user.userName} !\u003d null"
        },
        "type": "expr"
      },
      "persistent": true
    }
  },
  "props": {
    "defaultSize": {
      "height": 40,
      "width": 250
    }
  },
  "root": {
    "children": [
      {
        "children": [
          {
            "meta": {
              "name": "Icon"
            },
            "position": {
              "basis": "40px",
              "shrink": 0
            },
            "propConfig": {
              "props.path": {
                "binding": {
                  "config": {
                    "expression": "if({view.custom.isLoggedIn},\"material/account_circle\",\"material/person\")"
                  },
                  "type": "expr"
                }
              }
            },
            "props": {
              "style": {
                "padding": "8px"
              }
            },
            "type": "ia.display.icon"
          },
          {
            "meta": {
              "name": "Label"
            },
            "position": {
              "basis": "50px",
              "grow": 1
            },
            "propConfig": {
              "props.text": {
                "binding": {
                  "config": {
                    "expression": "if({view.custom.isLoggedIn},{session.props.auth.user.userName},\"Log in\")"
                  },
                  "type": "expr"
                }
              }
            },
            "props": {
              "style": {
                "overflow": "hidden"
              },
              "textStyle": {
                "paddingRight": 8,
                "whiteSpace": "nowrap"
              }
            },
            "type": "ia.display.label"
          }
        ],
        "events": {
          "dom": {
            "onClick": {
              "config": {
                "script": "\tif not self.view.custom.isLoggedIn:\n\t\tsystem.perspective.login()\n\telse:\n\t\tsystem.perspective.logout()"
              },
              "scope": "G",
              "type": "script"
            }
          }
        },
        "meta": {
          "name": "FlexContainer",
          "tooltip": {
            "enabled": true
          }
        },
        "position": {
          "grow": 1
        },
        "propConfig": {
          "meta.tooltip.text": {
            "binding": {
              "config": {
                "expression": "if({view.custom.isLoggedIn}, \"Log out\", \"Log in\")"
              },
              "type": "expr"
            }
          }
        },
        "props": {
          "style": {
            "overflow": "hidden"
          }
        },
        "type": "ia.container.flex"
      }
    ],
    "meta": {
      "domId": "nav-theme",
      "name": "root"
    },
    "props": {
      "style": {
        "overflow": "hidden"
      }
    },
    "type": "ia.container.flex"
  }
}